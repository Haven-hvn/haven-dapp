{
  "name": "haven-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build --webpack",
    "export": "next build --webpack",
    "build:prod": "next build --webpack",
    "preview": "next start",
    "clean": "rm -rf .next out",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:report": "playwright show-report",
    "test:install": "playwright install --with-deps",
    "test:web3": "cross-env INCLUDE_WEB3_TESTS=true playwright test --project=web3-chromium",
    "test:web3:headed": "cross-env INCLUDE_WEB3_TESTS=true playwright test --project=web3-chromium --headed",
    "test:web3:ui": "cross-env INCLUDE_WEB3_TESTS=true playwright test --project=web3-chromium --ui",
    "test:all": "cross-env INCLUDE_WEB3_TESTS=true playwright test"
  },
  "dependencies": {
    "@arkiv-network/sdk": "0.5.3",
    "@filoz/synapse-sdk": "^0.37.0",
    "@lit-protocol/auth": "8.2.3",
    "@lit-protocol/auth-helpers": "8.2.1",
    "@lit-protocol/lit-client": "8.3.1",
    "@lit-protocol/networks": "8.4.1",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-slot": "1.2.4",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@reown/appkit": "1.8.18",
    "@reown/appkit-adapter-wagmi": "1.8.18",
    "@tanstack/react-query": "5.90.21",
    "@tanstack/react-query-devtools": "5.91.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "ethers": "^6.16.0",
    "lucide-react": "0.574.0",
    "next": "16.1.6",
    "next-themes": "0.4.6",
    "pino-pretty": "13.1.3",
    "porto": "0.2.37",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "sonner": "2.0.7",
    "tailwind-merge": "3.5.0",
    "tw-animate-css": "1.4.0",
    "viem": "2.46.2",
    "wagmi": "2.19.5",
    "zustand": "5.0.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.58.2",
    "@synthetixio/synpress": "^4.1.2",
    "@tailwindcss/postcss": "4.2.0",
    "@types/node": "25.3.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "cross-env": "^10.1.0",
    "dotenv": "^17.3.1",
    "eslint": "^10.0.0",
    "eslint-config-next": "16.1.6",
    "postcss": "8.5.6",
    "tailwindcss": "4.2.0",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "use-sync-external-store": "^1.4.0"
  }
}
